CC = i386-elf-gcc
AS = i386-elf-as
LD = i386-elf-ld

CFLAGS = -c -nostdlib -ffreestanding -fno-builtin -m32
CFLAGS += -I../../arch/i386/include
CFLAGS += -I../../kernel

LDFLAGS = -nostdlib -T ../../arch/i386/kernel/linker.ld -m32

ROOT=../..

